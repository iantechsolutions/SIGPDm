@inherits LayoutComponentBase
@using BlazorApp1.Client.Shared

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row no-print d-flex align-items-center" style="background-color: #17a2b8 !important; color:white; z-index:2;">
                    <h6 class="mr-auto">
                       
                        <a href="/CambiarPassword" style="color:white;">@context.User.Claims.First(c => c.Type == System.Security.Claims.ClaimTypes.Name).Value</a>
                    </h6>
                    
                    <BlazorApp1.Client.Shared.NotificacionesItem /> 

                    <a href="Logout" class="btn btn-danger ml-3">
                        Salir <span class="oi oi-arrow-right"></span>
                    </a>
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </Authorized>
        <NotAuthorized>
            <main>
                <article class="content px-4">
                    <Login></Login>
                </article>
            </main>
        </NotAuthorized>
    </AuthorizeView>
</div>