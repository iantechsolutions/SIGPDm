                        <RadzenDataGridColumn TItem="Presupuesto" Property="" Title="Insumo" Filterable="false" Width="20%">
                            <Template Context="data">
                                <p>@oInsumo.Where(x => x.Id == data.Insumo).First().Descripcion</p>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Presupuesto" Property="" Title="Proveedor" Width="20%">
                            <Template Context="data">
