        oRespuestaAprobados = respuesta.List
             .Where(x => x.Estado == "Recibido" || x.Estado == "RecepcionParcial")
             .OrderByDescending(x => x.Id)
             .ToList();
        oRespuestaRechazados = respuesta.List.Where(x => x.Estado == "RecepcionRechazada").ToList();
