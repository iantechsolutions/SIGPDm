@inject IJSRuntime _js
@using System.Drawing
@using System.Drawing.Imaging;


<style>
    @@media print {
        .no-print {
            display: none !important;
        }

        .head {
            display: none !important;
        }

        .header {
            display: none !important;
        }

        .bm-header {
            display: none !important;
        }

        .bm-content {
            margin: 0;
        }
        .page {
            display: none !important;
        }

        .blazored-modal {
            width: 100% !important;
            margin: 0 !important;
            padding: 0 !important;
            box-shadow: 0px 0px !important;
        }

        .body {
            overflow: hidden;
        }

        ::-webkit-scrollbar {
            display: none;
        }

    }


    .blazored-modal{
        width: 14cm !important;
    }

    .impresion{
        height: 5cm;
        width: 10cm;
        font-size: 6px;
        position: relative;
        right: 8%
    }
    .card-img {
        
        width: 30%;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .bm-content{
        width: 10cm;
        position: relative;
        left: 8%
    }
    .rz-text-h6{
        font-size: 15px;
    }
    
</style>






<button class="btn btn-outline-primary no-print" style="float: right;" @onclick="Print"><FeatherPrinter Color="black"></FeatherPrinter></button>

<br/>

<div class="impresion">

    <img src="/Images/logo2.jpg" class="card-img" alt="...">

    <div class="texto">
        <div class="row">
            <RadzenText TextStyle="TextStyle.H6"> <strong>@oInsumo.Codigo</strong></RadzenText>
        </div>
        <div class="row">
            <RadzenText TextStyle="TextStyle.H6">@oInsumo.Descripcion</RadzenText>
        </div>
        <div class="row">
            <div class="col-3">
                    <RadzenText TextStyle="TextStyle.H6">
                    Maximo: @oInsumo.StockMax
                </RadzenText>
            </div>
            <div class="col-6"/>
            <div class="col-3">
                <RadzenText TextStyle="TextStyle.H6">
                    Minimo: @oInsumo.StockMin
                </RadzenText>
            </div>
        </div>
    </div> 

</div>










@code {




    InsumoDTO oInsumo = null;
    Respuesta<InsumoDTO>
    oRta = new();

    [Parameter] public int? Id { get; set; }




    


    

    protected override async Task OnInitializedAsync()
    {

        oRta = await http.GetFromJsonAsync<Respuesta<InsumoDTO>>($"/api/insumo/{Id}");
        oInsumo = oRta.List;


       

    }


    private async Task Print()
         => await _js.InvokeVoidAsync("window.print");


}
