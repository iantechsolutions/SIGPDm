    int cantidad;
    bool SeleccionarInsumo = false;

    public void resetInsLote()
    {
        lote = new();
        cantidad = 0;
        insumo = new();
    }
    protected override async Task OnInitializedAsync()
    {
        disable = false;
        var rtaa = await http.GetFromJsonAsync<Respuesta<List<Lote>>>("/api/Lotes");
        listaTodosLotes = rtaa.List;



        var response2 = await http.GetFromJsonAsync<Respuesta<List<InsumoDTO>>>("/api/insumo");
        oRtaInsumos = response2.List;

        var response3 = await http.GetFromJsonAsync<Respuesta<List<PersonalDTO>>>("/api/personal");
        oRtaPersonal = response3.List.Where(x => x.Puesto == "Operario").ToList();

        var response4 = await http.GetFromJsonAsync<Respuesta<List<PrestamoStock>>>("/api/PrestamoStock");
        oRtaStock = response4.List;





    }
    async Task ComeBack()
    {
        nav.NavigateTo("/ot");
    }


    int? calcularCantidad(InsumoDTO insumo)
    {
        int? total = 0;
        var lotes = listaTodosLotes.Where(x => x.IdInsumo == insumo.Id);

        if (listaTodosLotes != null)
        {
            foreach (var lote in lotes)
            {
                if (lote.Tipo == "Lote nuevo" && lote.Cantidad != null) total += lote.Cantidad;

            }
        }
        return total;
    }

    List<Lote> listaLotes(InsumoDTO insumo)
    {
        List<Lote> a = new();
        a = listaTodosLotes.Where(x => x.IdInsumo == insumo.Id).ToList();
        return a;
    }

    List<Lote> listaLotesNuevos(InsumoDTO insumo)
    {
        //List<Lote> a = new();
        List<Lote> oListaLotesNuevos = new();

        var lotes = listaTodosLotes.Where(x => x.IdInsumo == insumo.Id);

        if (lotes != null)
        {
            foreach (var i in lotes)
            {
                if (i.Tipo == "Lote nuevo")
                {
                    oListaLotesNuevos.Add(i);
                }
            }
        }
        return oListaLotesNuevos;
    }

    List<Lote> listaLotesRecorte(InsumoDTO insumo)
    {

        List<Lote> oListaLotesRecorte = new();
        var lotes = listaTodosLotes.Where(x => x.IdInsumo == insumo.Id);

        if (lotes != null)
        {
            lotes = listaTodosLotes.Where(x => x.IdInsumo == insumo.Id).ToList();
            foreach (var i in lotes)
            {
                if (i.Tipo == "Lote de recorte")
                {
                    oListaLotesRecorte.Add(i);
                }
            }
        }
        return oListaLotesRecorte;
    }
    public async Task AddPrestamoStock()
    {      
        var prest = await http.GetFromJsonAsync<List<PrestamoDTO>>("api/prestamo");

        var pr = prest.LastOrDefault();



        Stockusado.Prestamo = pr.Id;


      

        await http.PostAsJsonAsync<PrestamoStock>("/api/PrestamoStock", Stockusado);
    }
    public async Task alertaOk()
    {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Se creo correctamente el presupuesto.",
                Icon = SweetAlertIcon.Success,
                ShowCancelButton = false,
                ConfirmButtonText = "Entendido"

            });

        if (!string.IsNullOrEmpty(result.Value))
        {



            await http.PostAsJsonAsync<PrestamoDTO>("/api/prestamo", prestamo);

            await AddPrestamoStock();
        }
        else if (result.Dismiss == DismissReason.Cancel)
        {
           
        }
    }
    public async Task cargarInsumo()
    {
        prestamo.Cantidad = cantidad;
        prestamo.Insumo = insumo.Id;
        prestamo.Lote = lote.Id;

        Stockusado.Insumo = insumo.Id;
        Stockusado.Lote = lote.Id;
        Stockusado.Cantidad = cantidad;
        Stockusado.InsumoTipo = insumo.Tipo;
        Stockusado.LoteTipo = lote.Tipo;
        Stockusado.FechaFinal = prestamo.FechaFin;


       



        var PrestamosStocks = oRtaStock.Where(x => x.Lote == prestamo.Lote && x.FechaFinal >= DateTime.Now).ToList();
        int? CantTotal = prestamo.Cantidad;


        if (PrestamosStocks.Count > 0)
        {
           

            foreach (var StockUsado in PrestamosStocks)
            {
                CantTotal = CantTotal + StockUsado.Cantidad;
               
            }
            foreach (var StockUsado in PrestamosStocks)
            {

                if (StockUsado.LoteTipo == "Lote recorte")
                {
                    await AlertaUsado();

                }
                else if (StockUsado.InsumoTipo == "Lote unico")
                {
                    if (CantTotal > insumo.StockReal || insumo.StockMin > insumo.StockReal - CantTotal)
                    {
                        await AlertaUsado();
                    }
                    else
                    {
                        await StockCalculo();
                    }

                }
                else if (StockUsado.InsumoTipo == "Lote Multiple")
                {                   
                    if (CantTotal > lote.Cantidad || CantTotal > insumo.StockReal || insumo.StockMin > insumo.StockReal - CantTotal)
                    {
                        await AlertaUsado();
                    }
                    else
                    {
                        await StockCalculo();
                    }
                }
                else
                {
                    await StockCalculo();


                }
            }
        }
        else
        {
            await StockCalculo();
           
        }
    }

    public async Task AlertaUsado()
    {
        NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Detail = "El lote ya esta prestado",
                Duration = 4000
            });
    }
    public async Task StockCalculo()
    {
        
        if (lote.Tipo == "Lote de recorte")
        {
            cantidad = 1;




            
            alertaOk();
            await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));

        }
        else
        {
            if (insumo.Tipo == "Lote unico")
            {
                if ((cantidad > insumo.StockReal || insumo.StockMin > insumo.StockReal - cantidad) || cantidad <= 0)
                {
                    NotificationService.Notify(new NotificationMessage
                        {
                            Severity = NotificationSeverity.Error,
                            Detail = "No se dispone de esa cantidad",
                            Duration = 4000
                        });
                   
                    
                }
                else
                {
                   


                    alertaOk();
                    await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
                }
            }
            else
            {
                if (cantidad > 0 && lote.Cantidad > cantidad)
                {
                    if (calcularCantidad(insumo) < insumo.StockMin)
                    {
                        NotificationService.Notify(new NotificationMessage
                            {
                                Severity = NotificationSeverity.Info,
                                Detail = $"El insumo {insumo.Descripcion} quedo con menor stock que el minimo",
                                Duration = 4000
                            });
                    }
                    else if (cantidad == 0)
                    {
                        NotificationService.Notify(new NotificationMessage
                            {
                                Severity = NotificationSeverity.Warning,
                                Detail = "Cargar una cantidad",
                                Duration = 4000
                            });
                    }
                    else
                    {
                        
                        alertaOk();
                        await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
                    }
                }
                else
                {
                    NotificationService.Notify(new NotificationMessage
                        {
                            Severity = NotificationSeverity.Info,
                            Detail = $"El insumo {insumo.Descripcion} quedo con menor stock que el minimo",
                            Duration = 4000
                        });
                }
            }
        }


        
        

    }

