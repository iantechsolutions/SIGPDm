            </RadzenCategoryAxis>
            <RadzenValueAxis>
                <RadzenAxisTitle Text="Cantidad" />
            </RadzenValueAxis>
        </RadzenChart>
    </div>

    <!-- Segunda columna: Errores por Obra -->
