@page "/ventas"
<br />
<button class="btn btn-outline-primary" @onclick="ComeBack"><FeatherArrowLeft Color="Blue"></FeatherArrowLeft></button>
<br />
<br />
<h1>Ventas</h1>
<p>Descripción ventas (*)</p>
<hr />
<br />

<style>

    .asd {
        border: none;
        color: black;
        padding: 16px 32px;
        margin: 2px 1px;
        transition-duration: 0.4s;
    }

        .asd:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

    .card:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

</style>


<div class="container">
    <div class="row">

        <div class=" col-xl-3 col-md-6 mb-4" style="height:350px;">
            <div class="card border-10 ">
                <div @onclick=gotoclientes>
                    <img src="/Images/clientes.png" class="card-img-top" alt="..." style="height:200px;">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-0">Clientes</h4>
                        <label>Descripción clientes (*)</label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class=" col-xl-3 col-md-6 mb-4" style="height:350px;">
            <div class="card border-10 ">
                <div @onclick=gotocotizaciones>
                    <img src="/Images/Cotizaciones.jpg" class="card-img-top" alt="..." style="height:200px;">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-0">Cotizaciones</h4>
                        <label>Descripción cotizaciones (*)</label>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</div>



@code {
    async Task gotobienes()
    {
        nav.NavigateTo("/bienes");
    }
    async Task gotoclientes()
    {
        nav.NavigateTo("/clientes");

    }
    async Task gotocotizaciones()
    {
        nav.NavigateTo("/cotizaciones");
    }
    async Task gotoproveedores()
    {
        nav.NavigateTo("/proveedores");

    }
    async Task ComeBack()
    {
        nav.NavigateTo("/");
    }
}
