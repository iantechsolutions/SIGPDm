        {
            var rta = await http.GetFromJsonAsync<Respuesta<PersonalDTO>>($"/api/personal/{persona.Operario}");
            listaOperarios.Add(rta.List);
        }
        if (!string.IsNullOrEmpty(oTrabajo.Insumosusados))
